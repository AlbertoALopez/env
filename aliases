# general alias
alias al='cat ~/env/aliases | grep "^alias"'
alias nrca='nano ~/env/aliases'
alias nrco='nano ~/env/opt.al'
alias nrcf='nano ~/env/func.al'
alias nrc='nano ~/.bashrc'
alias src='source ~/.bashrc'
alias r='reset'
alias e='exit'
alias ho='cat /etc/hosts'
alias nho='sudo nano /etc/hosts'

# env installation
alias sag='sudo apt-get install'
alias envapply='sh ~/env/apply.sh'

# source all '.al', used as plugin system for env
function srcCustom {
	for al in $(find ~/env -name '*.al'); do source $al; done
}


srcCustom
