# general alias
alias al='alias | grep "^alias"'
alias nrca='nano ~/env/aliases'
alias nrco='nano ~/env/opt.al'
alias nrcf='nano ~/env/func.al'
alias nrcg='nano ~/env/git.al'
alias nrc='nano ~/.bashrc'
alias grca='gedit ~/env/aliases'
alias grco='gedit ~/env/opt.al'
alias grcf='gedit ~/env/func.al'
alias grcg='gedit ~/env/git.al'
alias grc='gedit ~/.bashrc'
alias src='source ~/.bashrc'
alias r='clear'
alias e='exit'
alias l='ls -a'
alias ll='ls -lha'
alias n='nano'
alias g='gedit'
alias s='ssh -Y'
alias nt='nautilus'
alias ho='cat /etc/hosts'
alias nho='sudo nano /etc/hosts'
alias chc='ping 8.8.8.8'
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../../'

# env installation
alias sag='sudo apt-get install'
alias envapply='sh ~/env/apply.sh'

# source all '.al', used as plugin system for env
function srcCustom {
  for al in $(find ~/env -name '*.al'); do source $al; done
}
# activated on source call
srcCustom

function add_profile {
  if [ ! -f ~/.profile ]; then
    echo "if [ ! -f ~/.bashrc ]; then\n  . ~/.bashrc\nfi" >> ~/.profile
  fi	
}
